# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For local development with Docker Compose (matches docker-compose.yml):
DATABASE_URL=postgresql://eod_user:eod_password@localhost:5432/eod_monitor
# For local development with custom PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/eod_monitor
# For Render.com (will be auto-populated):
# DATABASE_URL=<auto-populated-by-render>

# Frontend API URL (used by React app in production)
REACT_APP_API_URL=http://localhost:5000/api

# CORS Configuration (comma-separated list of allowed origins)
# Leave empty for development (allows all origins)
# In production, set to your frontend URL(s)
ALLOWED_ORIGINS=

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
